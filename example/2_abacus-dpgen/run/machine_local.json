{
  "api_version": "1.0",
  "deepmd_version": "3.0.1",
  "train": [
    {
      "command": "conda run -n dpmd_conda --no-capture-output dp --pt",
      "machine": {
        "batch_type": "Shell",
        "context_type": "LocalContext",
        "local_root": "./",
        "remote_root": "./"
      },
      "resources": {
        "number_node": 1,
        "cpu_per_node": 32,
        "gpu_per_node": 1,
        "para_deg": 4,
        "group_size": 1,
        "envs": {
          "DP_INFER_BATCH_SIZE": 81920,
          "DP_INTERFACE_PREC": "low",
          "NUM_WORKERS": 32
        },
        "source_list": ["$HOME/.bashrc", "$HOME/.conda_init.sh"]
      }
    }
  ],
  "model_devi": [
    {
      "command": "conda run -n dpmd_conda --no-capture-output lmp",
      "machine": {
        "batch_type": "Shell",
        "context_type": "LocalContext",
        "local_root": "./",
        "remote_root": "./"
      },
      "resources": {
        "number_node": 1,
        "cpu_per_node": 32,
        "gpu_per_node": 1,
        "group_size": 0,
        "source_list": ["$HOME/.bashrc", "$HOME/.conda_init.sh"]
      }
    }
  ],
  "fp": [
    {
      "command": "mpirun -np 32 abacus",
      "machine": {
        "batch_type": "Shell",
        "context_type": "LocalContext",
        "local_root": "./",
        "remote_root": "./"
      },
      "resources": {
        "number_node": 1,
        "cpu_per_node": 32,
        "gpu_per_node": 1,
        "group_size": 0,
        "source_list": ["$HOME/.bashrc", "$HOME/.conda_init.sh", "$HOME/Software/abacus-develop/toolchain/abacus_env.sh"],
        "_comment": "that's all"
      }
    }
  ]
}
